<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sunzala.afghankeyboard.ThemeActivity"
    android:orientation="vertical"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="6dp">

        <ImageView
            android:id="@+id/imgAlbum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kb_bg_2"/>

    </LinearLayout>

    <LinearLayout
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent"
            ads:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/theme2_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_2" />

                    <ImageButton
                        android:id="@+id/theme1_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        ads:srcCompat="@drawable/kb_bg_1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/theme3_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_3" />

                    <ImageButton
                        android:id="@+id/theme4_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/theme5_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_5" />

                    <ImageButton
                        android:id="@+id/theme6_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/theme7_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_7" />

                    <ImageButton
                        android:id="@+id/theme8_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/theme9_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_9" />

                    <ImageButton
                        android:id="@+id/theme10_imageButton"
                        android:layout_width="240dp"
                        android:layout_height="240dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_10" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>



    </LinearLayout>


</LinearLayout>
